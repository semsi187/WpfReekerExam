<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox" x:Key="loginBox">
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="FontWeight" Value="DemiBold"></Setter>
        <Setter Property="Background" Value="#F6F3FF"></Setter>
        <Setter Property="BorderBrush" Value="#8E46DC"></Setter>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="7"></Setter>
            </Style>
        </Style.Resources>
    </Style>


    <Style TargetType="TextBox" x:Key="Menu">
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="FontWeight" Value="DemiBold"></Setter>
        <Setter Property="Background" Value="#F6F3FF"></Setter>
        <Setter Property="BorderBrush" Value="#17172C"></Setter>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4"></Setter>
            </Style>
        </Style.Resources>
    </Style>

</ResourceDictionary>